{
    "name": "limoncello-php/app",
    "homepage": "https://github.com/limoncello-php/app",
    "support": {
        "issues": "https://github.com/limoncello-php/app/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "neomerx",
            "email": "info@neomerx.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "vlucas/phpdotenv": "^2.3",
        "limoncello-php/framework": "^0.8.0",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "limoncello-php/testing": "^0.8.0",
        "filp/whoops": "^2.1",
        "squizlabs/php_codesniffer": "^3.0",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^6.0",
        "mockery/mockery": "^1.0",
        "doctrine/dbal": "^2.5.0",
        "fzaninotto/faker": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "server/app/",
            "Settings\\": "server/settings/",
            "Cached\\": "server/storage/cache/settings/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "server/tests/"
        }
    },
    "extra": {
        "application": {
            "commands_cache": "server/storage/cache/settings/commands_cache.php"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.sample', '.env');\""
        ],
        "post-create-project-cmd": [
            "@composer l:commands connect",
            "@composer db"
        ],
        "post-update-cmd": ["@composer l:commands connect"],

        "serve": "php -S 0.0.0.0:8080 -t public",

        "develop": ["@composer l:app clear-cache", "@composer update --optimize-autoloader --quiet"],
        "build": ["@composer l:app cache", "@composer update --no-dev --optimize-autoloader --quiet"],

        "db": ["@composer l:db rollback", "@composer l:db migrate", "@composer l:db seed"],

        "test": ["@test-unit", "@test-cs", "@test-md"],
        "test-unit": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text",
        "test-cs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./server/app ./server/tests",
        "test-md": "./vendor/bin/phpmd ./server/app text codesize,controversial,cleancode,design,unusedcode,naming",
        "stress": "wrk -t10 -d5s -c400 http://127.0.0.1:8080/"
    }
}
